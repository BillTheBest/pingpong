:css
  .last-incident-container {
    border: 1px solid hsl(0, 0%, 80%);
  }
  .last-incident-container .incident-icon {
    padding: 35px;
    display: inline-block;
    border-right: 1px solid hsl(0, 0%, 80%);
  }
  .last-incident-container .incident-text {
    padding-left: 35px;
    display: inline-block;
  }

.container
  .row
    .col-md-6
      %h2= @check[:name]
      %h3= @check[:url]
      %p
        Frequency: 
        %span= @check[:frequency]
        minute
        / TODO: Make conditional plural
    .col-md-6
      .last-incident-container
        .incident-icon
          %span.status-icon{:aria => {:hidden => "true"}}
        .incident-text
          Last downtime:
          <br/>
          2:30pm on 3/5/2015
  .row
    .col-sm-12
      .chart-wrapper
        .chart-title
          %strong Average response time for the last 48 hours
        .chart-stage
          #grid-1-1.chart-container{:data => {:querytype => "average", :charttype => "line", :name => @check[:name], :groupby => "check.name", :timeframe => "last_48_hours", :interval => "hourly", :targetproperty => "request.duration", :chartoptions => "#{{legend: {show: false}}.to_json}"}}
  .row
    .col-md-12
      .chart-wrapper
        .chart-title
          %h2
            Detail view
  .row
    .col-md-11.col-xs-11
      %span
        Showing last
        %select{:id => "check_count", :name => "check_count"}
          %option{:value => "10"}
            10
        checks
    .col-md-1.col-xs-1.pull-right
      %button.btn.btn-default{:type => "button"}
        Export JSON
  .row
    .chart-stage
      #checks-extraction.extraction-container{:data => {:name => @check[:name], timeframe: "this_30_minutes", :latest => 10}}
        .panel-group#accordion{:role => "tablist", :aria => {:multiselectable => "true"}}
